<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.WriteItemActivity">

    <!--갤러리 권한-->
    <!--
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    -->
    <!--카메라 권한-->
    <!--
    <uses-permission android:name="android.permission.CAMERA"/>
    -->

    <!--사용자 갤러리에서 가져온 이미지 넣기-->

    <ImageView
        android:id="@+id/img_foods"
        android:layout_width="157dp"
        android:layout_height="492dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        tools:srcCompat="@drawable/img_foods_icecream" />

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="157dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="63dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/edit_contents_foods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/img_foods"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name_stores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식점명"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_name_foods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:hint="음식 이름"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_price_foods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:hint="가격"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_contents_foods"
        android:layout_width="491dp"
        android:layout_height="333dp"
        android:layout_marginTop="392dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="내용"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--여기서도 텍스트 입력 칸을 그냥 constraint layout이 아니라
     linear layout으로 해야 할지 고민이다 고민-->


</androidx.constraintlayout.widget.ConstraintLayout>